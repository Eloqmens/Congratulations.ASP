@model IEnumerable<Congratulations.Domain.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "GetUsers";
}

<div style="padding: 10px;"></div>
<div class="card col-md-12">
    <table class="table table-striped">
        <thead class="table-light">
            <tr>
                <th scope="col">Логин</th>
                <th scope="col">Роль</th>
                <th scope="col">Дата рождения</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.TypeUser</td>
                    <td>@user.DateBirthDay</td>
                    <td>
                        <form asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </form>
                    </td>
                    <td>
                        <form asp-controller="User" asp-action="Save" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-warring">
                                Изменить
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




